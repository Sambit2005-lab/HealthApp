<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".consultFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/appointment_fragment_final"
        android:scaleType="fitXY"
        >

    </ImageView>


    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textColor="@color/white"

        android:textSize="25sp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp">

    </TextView>

    <TextView
        android:id="@+id/_text_doctor"
        android:layout_below="@id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's find\nyour top doctor!"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp">

    </TextView>

    <TextView
        android:id="@+id/text_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meet your Doctors"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
        android:layout_marginTop="230dp"
        android:textColor="#F2A02B"
        android:textStyle="bold">

    </TextView>

    <androidx.cardview.widget.CardView
        android:onClick="expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_doctor"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="34dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/doctor_2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

            </ImageView>

            <TextView
                android:id="@+id/text_doc02"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="0dp"
                android:text="Dr. Rodger Struck">

            </TextView>

            <TextView
                android:id="@+id/text_doc02_adress"
                android:layout_width="290dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="45dp"
                android:text="Heart Surgeon, London, England">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/doc02_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:text="Meet Dr. Rodger Struck, a distinguished male heart surgeon known for his unparalleled expertise, unwavering dedication, and compassionate approach to cardiac care."
                    android:textSize="18sp"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>





    </androidx.cardview.widget.CardView>


</RelativeLayout>